' Elements
' ##################################

!define Person(e_alias, e_label) rectangle "==e_label\n<size:TECHN_FONT_SIZE>[Person]</size>\n\n<$person{scale=0.5}>" <<person>> as e_alias
!define Person(e_alias, e_label, e_descr) rectangle "==e_label\n<size:TECHN_FONT_SIZE>[Person]</size>\n\n<$person{scale=0.5}>\n e_descr" <<person>> as e_alias

!define Person_Ext(e_alias, e_label) rectangle "==e_label\n<size:TECHN_FONT_SIZE>[Person External]</size>\n\n<$person{scale=0.5}>" <<external_person>> as e_alias
!define Person_Ext(e_alias, e_label, e_descr) rectangle "==e_label\n<size:TECHN_FONT_SIZE>[Person External]</size>\n\n<$person{scale=0.5}>\n e_descr" <<external_person>> as e_alias

!define System(e_alias, e_label) rectangle "==e_label\n<size:TECHN_FONT_SIZE>[System]</size>" <<system>> as e_alias
!define System(e_alias, e_label, e_descr) rectangle "==e_label\n<size:TECHN_FONT_SIZE>[System]</size>\n\n e_descr" <<system>> as e_alias

!define System_Ext(e_alias, e_label) rectangle "==e_label\n<size:TECHN_FONT_SIZE>[System External]</size>" <<external_system>> as e_alias
