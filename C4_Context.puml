!define SystemDb(e_alias, e_label) database "==e_label\n<size:TECHN_FONT_SIZE>[System DB]</size>" <<system>> as e_alias
!define SystemDb(e_alias, e_label, e_descr) database "==e_label\n<size:TECHN_FONT_SIZE>[System DB]</size>\n\n e_descr" <<system>> as e_alias

!define SystemDb_Ext(e_alias, e_label) database "==e_label\n<size:TECHN_FONT_SIZE>[System DB external]</size>" <<external_system>> as e_alias
